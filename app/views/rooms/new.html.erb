<div class="wrapper">
  <div class="main">
    <div class="card devise-card">
      <div class="form-wrap">
        <div class="form-group text-center">
          <h2 class="mx-auto">INNR KANTO</h2>
          <p class="text-secondary">宿を登録しよう</p>
        </div>
        <%= form_with model: @room, local: true do |f| %>
          <div class="form-group">
            <%= f.label :roomname, "ルームネーム" %>
            <%= f.text_field :roomname, autofocus: true, class: "form-control" %>
          </div>
  
          <div class="form-group">
            <%= f.label :description, "ルーム紹介" %>
            <%= f.text_area :description, autofocus: true, class: "form-control" %>
          </div>
  
          <div class="form-group">
            <%= f.label :fee, "料金" %>
            <%= f.number_field :fee, autofocus: true, class: "form-control" %>
          </div>
  
          <div class="form-group">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :image, "イメージ画像" %><br />
            <%= f.file_field :image %>
          </div>
          
          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>