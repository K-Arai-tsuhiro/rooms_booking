<div class="wrapper margin-for-top">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="profile-form-wrap width-limit mx-auto p-5">
        <div class="border-bottom p-3">
          <h3>プロフィール編集</h3>
        </div>
        <div class="border-bottom text-center p-3">
          <%= image_tag avatar_url(@profile), class: "img-thumbnail rounded-circle" %>
          <p class="p-2"><strong>ユーザー名：</strong><%= @user.name %></p>
        </div>
        <%= form_with model: @profile, url: profile_path(@profile), local: true, method: :patch do |f| %>
          <div class="form-group border-bottom p-3">
            <%= f.label :profile_photo, "アイコン画像" %>
            <%= f.file_field :profile_photo %>
          </div>

          <div class="form-group border-bottom p-3">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, autofocus: true, class: "form-control w-100 mt-2 p-2" %>
          </div>

          <%= f.submit "更新する", class: "btn btn-primary" %>
        <% end %>
      </div>      
    </div>
  </div>
</div>